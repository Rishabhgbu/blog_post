{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/[...all]"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/[...all]"
    },
    {
      "src": "/static/(.*)",
      "dest": "/public/build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/build/index.html"
    }
  ]
}
