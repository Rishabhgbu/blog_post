{
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index" },
    { "src": "^(?!/api)(.*)$", "dest": "/index.html" }
  ]
}
