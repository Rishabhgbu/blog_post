{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/[...all]" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}
